{% extends 'base.html.twig' %}
{% block title %}Add New Book{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-plus-circle me-2"></i>Add a New Book
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.author) }}
                            {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.author) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.genre) }}
                            {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.genre) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.summary) }}
                            {{ form_widget(form.summary, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                            {{ form_errors(form.summary) }}
                        </div>
                        <div class="d-grid">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                        </div>
                        {{ form_end(form) }}
                        <div class="text-center mt-3">
                            <a href="{{ path('book_list') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back to Book List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}