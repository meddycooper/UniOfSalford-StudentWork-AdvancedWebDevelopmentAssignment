{% extends 'base.html.twig' %}
{% block title %}Search Books{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0"><i class="bi bi-search me-2"></i>Search Books</h4>
                    </div>
                    <div class="card-body">
                        {# Dummy search form for public display #}
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label" for="title">Title</label>
                                    <input type="text" id="title" class="form-control" placeholder="Enter book title">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="author">Author</label>
                                    <input type="text" id="author" class="form-control" placeholder="Enter author">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="genre">Genre</label>
                                    <input type="text" id="genre" class="form-control" placeholder="Enter genre">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="rating">Rating</label>
                                    <input type="number" id="rating" class="form-control" placeholder="Minimum rating">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="minPages">Min Pages</label>
                                    <input type="number" id="minPages" class="form-control" placeholder="Min pages">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="maxPages">Max Pages</label>
                                    <input type="number" id="maxPages" class="form-control" placeholder="Max pages">
                                </div>
                            </div>
                            <div class="mt-4 text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i> Search
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="mt-5">
                    <h4 class="mb-4">Results:</h4>
                    {# Dummy results for public display #}
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        {% for i in 1..3 %}
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <img src="https://via.placeholder.com/150x220?text=Cover+{{ i }}" class="card-img-top" alt="Sample Book Cover">
                                    <div class="card-body">
                                        <h5 class="card-title">Sample Book {{ i }}</h5>
                                        <p class="card-text">
                                            <strong>Author:</strong> Author {{ i }}<br>
                                            <strong>Genre:</strong> Genre {{ i }}<br>
                                            <strong>Pages:</strong> {{ 100 + i*50 }}<br>
                                            <strong>Rating:</strong>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star text-muted"></i>
                                            <i class="bi bi-star text-muted"></i>
                                        </p>
                                    </div>
                                    <div class="card-footer text-end bg-light">
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-book me-1"></i> View Book
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
