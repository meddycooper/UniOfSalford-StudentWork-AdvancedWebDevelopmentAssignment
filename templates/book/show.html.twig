{% extends 'base.html.twig' %}
{% block title %}Sample Book{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0"><i class="bi bi-book me-2"></i>Sample Book Title</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img class="img-fluid rounded shadow" src="https://via.placeholder.com/300x400?text=Cover" alt="Sample Book Cover">
                        </div>
                        <p><strong>Author:</strong> Sample Author</p>
                        <p><strong>Genre:</strong> Fiction</p>
                        <p><strong>Summary:</strong> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vitae.</p>
                        <p><strong>Pages:</strong> 250</p>

                        <p><strong>Average Rating:</strong>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star text-muted"></i>
                            <i class="bi bi-star text-muted"></i>
                        </p>

                        <div class="mb-3">
                            <button class="btn btn-outline-primary btn-sm"><i class="bi bi-bookmark-plus"></i> Add to Favorites</button>
                            <button class="btn btn-outline-danger btn-sm"><i class="bi bi-bookmark-x"></i> Remove from Favorites</button>
                        </div>
                    </div>

                    <div class="card mt-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Reviews</h4>
                        </div>
                        <div class="card-body">
                            {% for i in 1..3 %}
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-person-circle me-2 fs-3 text-secondary"></i>
                                            <strong class="me-auto">user{{ i }}</strong>
                                            <div>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                            </div>
                                        </div>
                                        <p class="mb-3">This is a sample review text for demonstration purposes. Review number {{ i }}.</p>
                                        <p class="mb-3"><strong>Upvotes:</strong> {{ 5 + i }}</p>
                                        <button class="btn btn-sm btn-outline-primary mb-3"><i class="bi bi-hand-thumbs-up"></i> Upvote</button>

                                        <h5>Comments</h5>
                                        <ul class="list-unstyled ps-3">
                                            {% for j in 1..2 %}
                                                <li class="mb-3 border-bottom pb-2">
                                                    <div class="d-flex align-items-center mb-1">
                                                        <strong class="me-auto small">commenter{{ j }}</strong>
                                                        <small class="text-muted">2025-09-25 12:0{{ j }}</small>
                                                    </div>
                                                    <p class="mb-1 small">Sample comment content {{ j }}.</p>
                                                    <ul class="list-unstyled ps-4 border-start border-2 ms-3">
                                                        <li class="mb-2">
                                                            <div class="d-flex align-items-center mb-1">
                                                                <strong class="me-auto smaller fst-italic">reply{{ j }}</strong>
                                                                <small class="text-muted smaller">2025-09-25 12:1{{ j }}</small>
                                                            </div>
                                                            <p class="mb-0 smaller fst-italic">Sample reply {{ j }}.</p>
                                                        </li>
                                                    </ul>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                        <button class="btn btn-sm btn-outline-secondary mt-2">Add a Comment</button>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between align-items-center">
                        <button class="btn btn-outline-success"><i class="bi bi-pencil-square me-1"></i>Add Review</button>
                        <a href="#" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
