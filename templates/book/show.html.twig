{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0"><i class="bi bi-book me-2"></i>{{ book.title }}</h2>
                    </div>
                    <div class="card-body">
                        {% if book.coverImage %}
                            <div class="text-center mb-4">
                                <img class="img-fluid rounded shadow" src="{{ asset('uploads/covers/' ~ book.coverImage) }}" alt="Cover of {{ book.title }}" style="max-height: 300px;">
                            </div>
                        {% endif %}
                        <p><strong>Author:</strong> {{ book.author }}</p>
                        <p><strong>Genre:</strong> {{ book.genre }}</p>
                        <p><strong>Summary:</strong> {{ book.summary }}</p>
                        <p><strong>Pages:</strong> {{ book.pages }}</p>

                        <p><strong>Average Rating:</strong>
                            {% if book.averageRating is not null %}
                                {% for i in 1..book.averageRating %}
                                    <i class="bi bi-star-fill text-warning"></i>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">No ratings yet</span>
                            {% endif %}
                        </p>
                    </div>
                    {% if app.user %}
                        {% if not isFavorite %}
                            <form action="{{ path('favorites_add', {id: book.id}) }}" method="post" class="d-inline">
                                <button class="btn btn-outline-primary btn-sm" type="submit" title="Add to Favorites">
                                    <i class="bi bi-bookmark-plus"></i> Add to Favorites
                                </button>
                            </form>
                        {% else %}
                            <form action="{{ path('favorites_remove', {id: book.id}) }}" method="post" class="d-inline">
                                <button class="btn btn-outline-danger btn-sm" type="submit" title="Remove from Favorites">
                                    <i class="bi bi-bookmark-x"></i> Remove from Favourites
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}
                </div>

                <div class="card mt-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h4 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Reviews</h4>
                    </div>
                    <div class="card-body">
                        {% if book.reviews is not empty %}
                            {% for review in book.reviews %}
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-2">
                                            {% if review.user.profilePicture %}
                                                <img src="{{ asset('uploads/profile_pictures/' ~ review.user.profilePicture) }}" alt="Profile Picture" class="rounded-circle me-2" width="40" height="40">
                                            {% else %}
                                                <i class="bi bi-person-circle me-2 fs-3 text-secondary"></i>
                                            {% endif %}
                                            <strong class="me-auto">
                                                {{ review.user.username ?: review.user.email }}
                                            </strong>
                                            <div>
                                                {% for i in 1..review.rating %}
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                {% endfor %}
                                            </div>
                                        </div>

                                        <p class="mb-3">{{ review.reviewText }}</p>

                                        <p class="mb-3">
                                            <strong>Upvotes:</strong>
                                            <span id="upvotes-{{ review.id }}">{{ review.getUpvotesCount }}</span>
                                        </p>

                                        {% if app.user %}
                                            <form method="POST" action="{{ path('review_upvote', {'id': review.id}) }}" class="upvote-form mb-3" data-review-id="{{ review.id }}">
                                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-hand-thumbs-up"></i> Upvote
                                                </button>
                                            </form>
                                        {% else %}
                                            <p class="text-muted small"><em>Login to upvote</em></p>
                                        {% endif %}

                                        <h5>Comments</h5>

                                        {% set comments = commentsByReview[review.id] ?? [] %}
                                        {% if comments is empty %}
                                            <p class="text-muted small fst-italic">No comments yet.</p>
                                        {% else %}
                                            <ul class="list-unstyled ps-3">
                                                {% for comment in comments %}
                                                    <li class="mb-3 border-bottom pb-2">
                                                        <div class="d-flex align-items-center mb-1">
                                                            <strong class="me-auto small">
                                                                {{ comment.author.username ?: comment.author.email }}
                                                            </strong>
                                                            <small class="text-muted">{{ comment.createdAt|date('Y-m-d H:i') }}</small>
                                                        </div>
                                                        <p class="mb-1 small">{{ comment.content }}</p>

                                                        {% if comment.replies|length > 0 %}
                                                            <ul class="list-unstyled ps-4 border-start border-2 ms-3">
                                                                {% for reply in comment.replies %}
                                                                    <li class="mb-2">
                                                                        <div class="d-flex align-items-center mb-1">
                                                                            <strong class="me-auto smaller fst-italic">
                                                                                {{ reply.author.username }}
                                                                            </strong>
                                                                            <small class="text-muted smaller">{{ reply.createdAt|date('Y-m-d H:i') }}</small>
                                                                        </div>
                                                                        <p class="mb-0 smaller fst-italic">{{ reply.text }}</p>
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>
                                                        {% endif %}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                        <a href="{{ path('app_comment_create', {'reviewId': review.id}) }}" class="btn btn-sm btn-outline-secondary mt-2">Add a Comment</a>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted fst-italic">No reviews yet.</p>
                        {% endif %}
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    {% if app.user %}
                        <a href="{{ path('app_review_create', {'bookId': book.id}) }}" class="btn btn-outline-success">
                            <i class="bi bi-pencil-square me-1"></i>Add Review
                        </a>
                    {% else %}
                        <p class="text-danger mb-0">You must be logged in to add a review.</p>
                    {% endif %}
                    <a href="{{ path('book_list') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to list
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}