{% extends 'base.html.twig' %}
{% block title %}Edit Book{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="card shadow rounded p-4">
            <h1 class="h4 mb-4 text-primary">Edit Book: {{ book.title }}</h1>
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.title, null, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.author, null, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.author, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(form.author) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.summary, null, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.summary, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(form.summary) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.coverImageFile, 'Change Cover Image', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.coverImageFile, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(form.coverImageFile) }}
            </div>
            {% if book.coverImage %}
                <div class="mb-3">
                    <p class="fw-semibold">Current Cover Image:</p>
                    <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}" alt="Cover Image" class="img-thumbnail" style="max-height: 200px;">
                </div>
            {% endif %}
            <button class="btn btn-success">
                <i class="bi bi-save me-1"></i>Update Book
            </button>
            {{ form_end(form) }}
            <div class="mt-3">
                <a href="{{ path('admin_books') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i>Back to Book List
                </a>
            </div>
        </div>
    </div>
{% endblock %}