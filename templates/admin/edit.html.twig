{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow rounded p-4">
            <h1 class="h4 mb-4">Edit Roles for <span class="text-primary">{{ user.email }}</span></h1>

            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.roles, 'Assign Roles', { 'label_attr': {'class': 'form-label fw-semibold'} }) }}
                {{ form_widget(form.roles, { 'attr': {'class': 'form-select'} }) }}
                {{ form_errors(form.roles) }}
            </div>

            <button class="btn btn-success"><i class="bi bi-check-circle me-1"></i>Update Roles</button>
            {{ form_end(form) }}

            <div class="mt-3">
                <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i>Back to User List
                </a>
            </div>
        </div>
    </div>
{% endblock %}