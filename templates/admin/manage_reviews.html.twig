{% extends 'base.html.twig' %}

{% block title %}Manage Reviews{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Manage Reviews</h1>

        {# Flash messages (dummy) #}
        <div class="alert alert-success">Sample success message</div>
        <div class="alert alert-danger">Sample error message</div>

        {% set dummyReviews = [
            {'id': 1, 'book': {'title':'Sample Book 1'}, 'user': {'username':'user1','email':'user1@example.com'}, 'rating':4, 'reviewText':'This is a sample review text for demonstration purposes.', 'flagged': false},
            {'id': 2, 'book': {'title':'Sample Book 2'}, 'user': {'username':'user2','email':'user2@example.com'}, 'rating':5, 'reviewText':'Another sample review text that is slightly longer to show truncation in table.', 'flagged': true},
            {'id': 3, 'book': {'title':'Sample Book 3'}, 'user': {'username':'user3','email':'user3@example.com'}, 'rating':3, 'reviewText':'Short review.', 'flagged': false}
        ] %}

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th>Review ID</th>
                    <th>Book</th>
                    <th class="d-none d-md-table-cell">User</th>
                    <th class="d-none d-md-table-cell">Rating</th>
                    <th>Content</th>
                    <th class="d-none d-sm-table-cell">Flagged</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for review in dummyReviews %}
                    <tr>
                        <td>{{ review.id }}</td>
                        <td>{{ review.book.title }}</td>
                        <td class="d-none d-md-table-cell">{{ review.user.username ?: review.user.email }}</td>
                        <td class="d-none d-md-table-cell">{{ review.rating }}</td>
                        <td title="{{ review.reviewText }}">
                            {{ review.reviewText|length > 50 ? review.reviewText|slice(0, 50) ~ '...' : review.reviewText }}
                        </td>
                        <td class="d-none d-sm-table-cell">
                            {% if review.flagged %}
                                <span class="badge bg-danger">Flagged</span>
                            {% else %}
                                <span class="badge bg-secondary">No</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex gap-1 flex-wrap">
                                <button class="btn btn-sm {{ review.flagged ? 'btn-secondary' : 'btn-warning' }}" type="button"
                                        title="{{ review.flagged ? 'Unflag review' : 'Flag review' }}">
                                    <i class="bi {{ review.flagged ? 'bi-flag-fill' : 'bi-flag' }}"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" type="button" title="Delete review">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No reviews found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="#" class="btn btn-secondary mt-3"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
        </div>
    </div>
{% endblock %}
