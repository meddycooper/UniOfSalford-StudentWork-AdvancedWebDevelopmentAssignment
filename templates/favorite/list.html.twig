{% extends 'base.html.twig' %}
{% block title %}My Favorites{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5 text-primary"><i class="bi bi-heart-fill me-2"></i>My Favorite Books</h1>
        </div>
        {% if favorites|length == 0 %}
            <div class="alert alert-info text-center" role="alert">
                You haven't added any favorites yet.
            </div>
        {% else %}
            <div class="row g-4">
                {% for favorite in favorites %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <img src="{{ asset('uploads/covers/' ~ favorite.book.coverImage) }}" class="card-img-top" alt="Cover of {{ favorite.book.title }}" style="object-fit: cover; height: 300px;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-primary">
                                    <i class="bi bi-book me-2"></i>{{ favorite.book.title }}
                                </h5>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <a href="{{ path('book_show', {id: favorite.book.id}) }}" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                    <form action="{{ path('favorites_remove', {id: favorite.book.id}) }}" method="post" onsubmit="return confirm('Remove this book from favorites?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-x-circle"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}