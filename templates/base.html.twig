<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- External CSS -->
    {% block stylesheets %}
        {# Placeholder for CSS assets (Encore or other) #}
    {% endblock %}

    <!-- Google Fonts & Bootstrap Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
<!-- Navigation Bar -->
<nav>
    <ul>
        <li><a href="{{ path('book_list') }}">Home</a></li>
        {% if app.user %}
            <li>Welcome, {{ app.user.email }}</li>
            <li>{{ app.user.username }}</li>
            <li><a href="{{ path('app_logout') }}">Logout</a></li>
            <li><a href="{{ path('app_profile_show') }}">My Profile</a></li>
            <li><a href="{{ path('user_reviews') }}">My Reviews</a></li>
            <li><a href="{{ path('favorites_list') }}">My Favorites</a></li>
            <li><a href="{{ path('book_new') }}">Add Book</a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('app_admin') }}">Dashboard</a></li>
            {% endif %}
        {% else %}
            <li><a href="{{ path('app_login') }}">Login</a></li>
            <li><a href="{{ path('app_register') }}">Register</a></li>
        {% endif %}
        <li><a href="{{ path('book_list') }}">Books</a></li>
        <li><a href="{{ path('book_search') }}">Search</a></li>
        <li><a href="{{ path('search_book') }}">Google Books</a></li>
    </ul>
</nav>

<!-- Main Content Block -->
<div>
    {% block body %}
    {% endblock %}
</div>

<!-- Footer -->
{% include '_footer.html.twig' %}

<!-- Scripts -->
{% block javascripts %}
    {# Placeholder for JS assets (Encore or other) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
