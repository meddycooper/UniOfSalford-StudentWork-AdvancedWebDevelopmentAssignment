<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <!-- External CSS -->
    <!-- Symfony Encore CSS -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
<!-- Navigation Bar -->
<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('book_list') }}">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" width="40" class="me-2">
            MyBookApp
        </a>
        <!-- Toggler/collapsing button for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item">
                        <span class="nav-link disabled">Welcome, {{ app.user.email }}</span>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        {% if app.user.profilePicture %}
                            <img src="{{ asset('uploads/profile_pictures/' ~ app.user.profilePicture) }}" alt="Profile Picture" class="rounded-circle me-2" width="32" height="32">
                        {% else %}
                            <i class="bi bi-person-circle me-2 fs-4 text-white"></i>
                        {% endif %}
                        <span class="nav-link disabled">{{ app.user.username }}</span>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-1"></i>Logout</a></li>
                {% endif %}
                {% if app.user %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_profile_show') }}"><i class="bi bi-person-circle"></i>My Profile</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_reviews') }}"><i class="bi bi-chat-dots me-1"></i>My Reviews</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('favorites_list') }}">
                            <i class="bi bi-bookmark-heart"></i> My Favorites
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('book_new') }}"><i class="bi bi-plus-square me-1"></i>Add Book</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_admin') }}"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
                    {% endif %}
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}"><i class="bi bi-box-arrow-in-right me-1"></i>Register</a></li>
                {% endif %}
                <li class="nav-item"><a class="nav-link" href="{{ path('book_list') }}"><i class="bi bi-book me-1"></i>Books</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('book_search') }}"><i class="bi bi-search me-1"></i>Search</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('search_book') }}"><i class="bi bi-search-heart me-1"></i>Google Books</a></li>
            </ul>
        </div>
    </div>
</nav>
<!-- Main Content Block -->
<div class="container">
    {% block body %}
    {% endblock %}
</div>
{% include '_footer.html.twig' %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
