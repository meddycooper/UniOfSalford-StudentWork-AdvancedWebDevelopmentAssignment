{% extends 'base.html.twig' %}

{% block title %}My Reviews{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">My Reviews</h1>

        {% if reviews|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th scope="col">Book Title</th>
                        <th scope="col">Review</th>
                        <th scope="col" style="width: 200px;">Rating</th>
                        <th scope="col" style="width: 200px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for review in reviews %}
                        <tr>
                            <td>{{ review.book.title }}</td>
                            <td>{{ review.reviewText|length > 100 ? review.reviewText|slice(0, 100) ~ '...' : review.reviewText }}</td>
                            <td>
                                {{ review.rating }}/5
                                <div>
                                    {% for i in 1..5 %}
                                        {% if i <= review.rating %}
                                            <span class="text-warning">&#9733;</span>
                                        {% else %}
                                            <span class="text-secondary">&#9733;</span>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </td>
                            <td class="text-nowrap">
                                <form action="{{ path('app_review_edit', {'id': review.id}) }}" method="get" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-primary me-2" onclick="return confirm('Are you sure you want to edit this review?');">Edit</button>
                                </form>

                                <form action="{{ path('app_review_delete', {'id': review.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                You have not written any reviews yet.
            </div>
        {% endif %}

        <a href="{{ path('book_list') }}" class="btn btn-secondary mt-3">Back to Book List</a>
    </div>
{% endblock %}